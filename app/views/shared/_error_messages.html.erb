<% if object.errors.any? %>
  <div class = "error_explanation">
    <div class="alert alert-danger">
      <%= t ".error_noti" %><%= pluralize object.errors.count, t(".error") %>.
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
